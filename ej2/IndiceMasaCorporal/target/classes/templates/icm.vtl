<html>
    <head>
        <title>Indice de Masa Corporal</title>
    </head>
    <body>
        <form action="/getIMC" method="get">
            <label for="peso">Peso(kg):</label>
            <input id="peso" name="peso" class="form-control" required/>
            <br/><br/>
            <label for="altura">Altura(cm):</label>
            <input id="altura" name="altura" class="form-control" required/>
            <br/><br/>
            <button type=submit" class="btn">Calcular</button>
        </form>
        <br/>
        <div>
            <b>Resultado</b>
            <br/>
            IMC = $valor
            <br/>
            Estado = $estado
        </div>
    </body>
</html>